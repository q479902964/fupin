    <label>服役部队代号</label>
    <input type="text" name="unitCode" value="" />
  </div>
  <div class="input__text">
    <label>部队职务级别</label>
    <input type="text" name="rank" value="" />
  </div>
  <div class="input__select">
    <label>入伍时间</label>
    <select class="J-start-year" name="startYear">

    </select> 年
    <select class="J-start-month" name="startMonth">

    </select> 月
    <select class="J-start-date" name="startDate">


# http://editorconfig.org

# 表明是最顶层的配置文件
root = true
# 正则*匹配所有文件
[*]
# 编码格式
charset = utf-8
# 定义换行符
end_of_line = lf
# 文件是否以空白行结尾
insert_final_newline = true
# 是否去处行首行尾的空白字符
trim_trailing_whitespace = true

# 正则匹配以.js结尾的文件
[*.js]
quote_type = double
# 缩进空格数
indent_size = 2

# 正则匹配以.scss结尾的文件
[*.scss]
index_style = 2
indent_size = 2

[*.html]
indent_size = 2

[*.hbs]
indent_size = 2

[*.json]
indent_size = 2


[.*]
indent_size = 2



